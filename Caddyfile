jobsyapp.ru {
        handle /api/* {
                uri strip_prefix /api
                reverse_proxy app:8080
        }
        handle /actuator/* {
                reverse_proxy app:8081
        }
        handle /metrics/* {
                uri strip_prefix /metrics
                reverse_proxy prometheus:9090
            }

        handle /grafana/* {
                uri strip_prefix /grafana
                reverse_proxy grafana:3000
        }
}