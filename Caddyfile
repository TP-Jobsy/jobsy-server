jobsyapp.ru {
        handle /api/* {
                uri strip_prefix /api
                reverse_proxy app:8080
        }
        handle /actuator/* {
                reverse_proxy app:8081
            }
        handle /metrics/* {
                uri strip_prefix /metrics
                reverse_proxy prometheus:9090
            }
        handle_path /grafana* {
               reverse_proxy grafana:3000 {
                   header_up Host {host}
                   header_up X-Forwarded-Proto {scheme}
               }
           }
}